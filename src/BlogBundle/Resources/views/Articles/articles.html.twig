{% extends 'BlogBundle:Default:layout.html.twig' %}

{% block title %}Articles{% endblock %}
{% block blog_title %}Toto{% endblock %}

{% block body %}
    {% for post in posts %}
        <article class="post">
            <header>
                <h2><a href="{{ path('article_slug', { 'slug': post.slug }) }}">{{ post.title }}</a></h2>
            </header>

            <div class="snippet">
                <p>{{ post.article|striptags|truncate(250) }}</p>
                <p class="continue"><a href="{{ path('article_slug', { 'slug': post.slug }) }}">Continue reading...</a></p>
            </div>

            <footer class="meta">
                <p>Comments: -</p>
                <p>Posted by <span class="highlight">{{post.author}}</span></p>
            </footer>
            <br>
        </article>
    {% else %}
        <p>Il n'y a pas d'article Ã  afficher</p>
    {% endfor %}
{% endblock %}