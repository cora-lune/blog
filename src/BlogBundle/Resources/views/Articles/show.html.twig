{% extends 'BlogBundle:Default:layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div>
            <h2>{{ post.title }}</h2>
            </div>
        </header>
        <div>
            <p>{{ post.author }}</p>
        </div>
        <div>
            <p>{{ post.article }}</p>
        </div>
    </article>
{% endblock %}